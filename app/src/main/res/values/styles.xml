<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ToolbarTitleCustom" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="android:background">@android:color/white</item>
        <item name="textAppearanceHeadline6">@style/AlertDialogTitleText</item>
        <item name="textAppearanceBody2">@style/AlertDialogMessageText</item>
    </style>

    <style name="AlertDialogTitleText" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
        <item name="fontFamily">@font/montserrat_semibold</item>
    </style>

    <style name="AlertDialogMessageText" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="fontFamily">@font/montserrat</item>
    </style>
</resources>
